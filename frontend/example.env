# ==============================================================================
# IPL Cricket Dashboard - Frontend Environment Configuration Template
# ==============================================================================
# Instructions:
# 1. Copy this file to .env
# 2. Update the values as per your environment requirements
# ==============================================================================

# ===========================================
# 1. API CONFIGURATION
# ===========================================
# The base URL for the backend API
# Local: http://localhost:8000
# Prod: https://boundary-graph.onrender.com
NUXT_PUBLIC_API_BASE=https://boundary-graph.onrender.com

# ===========================================
# 2. CACHING & PERFORMANCE
# ===========================================
# Enable/Disable browser-side caching
NUXT_PUBLIC_CACHE_ENABLED=true

# Cache TTL in milliseconds (default: 30 minutes)
NUXT_PUBLIC_CACHE_TTL=1800000

# Stale-while-revalidate period in milliseconds (default: 1 hour)
NUXT_PUBLIC_STALE_WHILE_REVALIDATE=3600000

# ===========================================
# 3. ANALYTICS & MONITORING
# ===========================================
NUXT_PUBLIC_ANALYTICS_ENABLED=false
NUXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
